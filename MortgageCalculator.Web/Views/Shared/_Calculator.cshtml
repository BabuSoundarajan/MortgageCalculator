@model IEnumerable<MortgageCalculator.Dto.MortgageDropDownList>
<div class="row error-message hidden">
    <div class="col-md-6 col-md-offset-3 alert alert-dismissible alert-warning">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <p>Please input all fields.</p>
    </div>
</div>


<div class="row calculation-section">
    <div class="col-md-3 form-group">
        <label class="control-label" for="amount">I would like to borrow</label>
        <input class="form-control input-lg" type="text" id="amount" maxlength="25" data-allow-empty="true" data-thousands="," data-precision="0" data-prefix="$" data-reverse="false" placeholder="e.g. 5000">
    </div>
    <div class="col-md-2 form-group">
        <label class="control-label" for="amount">Over years of</label>
        <input class="form-control input-lg numbers" type="text" maxlength="2" id="years" placeholder="e.g. 5">
    </div>

    <div class="col-md-5 form-group">
        <label for="mortgageType" class="control-label">With a mortgage type</label>
        @Html.DropDownList("mortgageType", new SelectList(Model, "Value", "Text"), new { @class = "form-control mar-t-7" })

    </div>

    <div class="col-md-2 form-group pad-t-35">
        <button id="calculate" class="btn btn-warning btn-lg form-control">Get Estimate</button>
    </div>
</div>

<div class="row hidden result-summary">
    <div class="col-md-12">
        <h3>Your estimated results</h3>
        <p class="pad-b-45">Your estimated monthly payments are <span id="monthlyAmount" class="h5">$</span>, and you will pay <span id="totalInterestAmount" class="h5">$</span> in interest over the total <span id="loanPeriod" class="h5"></span> years loan period.</p>
    </div>

    <div class="col-md-6">
        <canvas id="resultChart"></canvas>
    </div>

    <div class="col-md-6">
        <h5>Summary</h5>
        <table class="table table-striped table-hover">
            <tbody class="bold">
                <tr>
                    <td>Loan Amount</td>
                    <td id="loanAmount">$</td>
                </tr>
                <tr>
                    <td>Annual Interest Rate (%) and Type</td>
                    <td id="interestRate"></td>
                </tr>
                <tr>
                    <td>Loan Term in Years</td>
                    <td id="loanTerm"></td>
                </tr>
                <tr>
                    <td>Monthly Repayment</td>
                    <td id="monthlyLoanAmount">$</td>
                </tr>
                <tr>
                    <td>Total Loan Repayment</td>
                    <td id="totalLoanAmount">$</td>
                </tr>
                <tr>
                    <td>Total Interest Repayment</td>
                    <td id="totalLoanInterest">$</td>
                </tr>
            </tbody>
        </table>

        <div class="row pad-b-45">
            <button id="newCalculation" class="btn btn-warning col-md-4 col-sm-5 col-sm-offset-1 col-md-offset-1"><span class="glyphicon glyphicon-repeat"></span> Calculate Again</button>
            <button id="print" class="btn btn-warning col-md-4 col-sm-5 col-sm-offset-1 col-md-offset-2"><span class="glyphicon glyphicon-print"></span> Print results</button>
        </div>

    </div>
</div>